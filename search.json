{
  "query": {
    "bool": {
      "filter": [
        {
          "geo_distance": {
            "distance": "25km",
            "location": {
              "lat":  49.2077138,
              "lon": -123.140345
            }
          }
        },
        {
          "term": {"company_confidential": false}
        },
        {
          "term": {"province_code": "CA-BC"}
        },
        {
          "term": {"employer.employer_type": "Employer"}
        },
        {
          "terms": {
            "position_type.position_type_id": [1,2,3]
         }
       },
        {
          "terms": {
            "employer.industry.industry_id": [1,34,30]
         }
       },
        {
          "terms": {
            "career_level": [1,4]
         }
       },
       {"missing": {"field": "employer.featured_website"} },
       {
         "range": {
           "publish_date": {
             "gte" : "1995-01-12 12:12:12"
           }
         }
       }
      ],
      "must": [
        {
          "query_string": {
            "query":       "*",
            "fields":      [ "position_type.position_type_name", "description^1.4", "employer.company_name^1.6", "location_name^1.2", "title^2" ],
            "default_operator": "and",
            "minimum_should_match": "50%"
          }
        }
      ]
    }
  }
}
